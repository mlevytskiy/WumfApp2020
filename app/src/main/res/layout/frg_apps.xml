<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.core.wumfapp2020.viewmodel.AppsViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/home_top_bg"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/black_alpha_50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your own app collection"
                android:textSize="40dp"
                android:textColor="@android:color/white"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:padding="8dp"
                android:gravity="center|start"
                android:layout_centerInParent="true" />

        </RelativeLayout>

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--            android:id="@+id/btnFloatingAction"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_margin="16dp"-->
<!--            android:src="@drawable/ic_plus"-->
<!--            app:backgroundTint="@color/cpb_red_dark"-->
<!--            app:borderWidth="0dp"-->
<!--            app:fabSize="normal" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_alignParentBottom="true">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFloatingAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_plus"
                android:onClick="@{()->viewModel.onClickAddApp()}"
                app:backgroundTint="@color/cpb_red_dark"
                app:borderWidth="0dp"
                app:fabSize="normal" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
