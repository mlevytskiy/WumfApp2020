<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:gravity="center|start"
        android:textSize="20dp"
        android:background="@drawable/labled_edit_text_background_active2"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/labled_edit_text_background2"
            android:text="@string/language_in_edi_phone_number_ui"
            android:textColor="#ff2090ea"
            style="@style/PhoneNumberEditTextLabelTheme"
            tools:text="@string/language_in_edi_phone_number_ui"
            android:includeFontPadding="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</merge>